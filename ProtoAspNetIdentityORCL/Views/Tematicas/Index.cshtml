@model IEnumerable<NSPecor.Models.GEOB_TEMATICAS>

@{
    ViewBag.Title = "Tematica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tematicas</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
           TEMATICA
        </th>
        <th>
            IMAGEN
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GEOB_ESTADO.ESTADO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URL_IMG)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.GEOB_ESTADO.ESTADO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_TEMATICA }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.ID_TEMATICA }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.ID_TEMATICA })
        </td>
    </tr>
}

</table>
